<body>
<div class="container col-sm-8 col-sm-offset-2">
    <div>
        <h1>GitScrum challenge Taskboard</h1>
        
        <div class="container">
            <div class="row">
                <div class="col-sm" id="andamento">
                    <div class="col">Em adamento</div>
                    <div class="col card" v-for='task in tasks'>
                        <div><span :class="{ taskDone: task.done }">{{ task.name }}</span></div>
                        <div><button class="btn btn-danger btn-block" v-on:click="deleteTask(task)">Delete</button></div>
                    </div>
                    <div class="">
                        <form v-on:submit='addTask'>
                            <div>
                                <input type="text" class='form-control' v-model='tasks.name'>
                            </div>
                            <div>
                                <input type="submit" value='Criar Card' class='btn btn-primary btn-block'>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-sm" id="concluido">
                    <div class="col">Concluido</div>
                    <div class="col card" v-for='task in tasks'>
                        <div><span :class="{ taskDone: task.done }">{{ task.name }}</span></div>
                        <div><button class="btn btn-danger btn-block" v-on:click="deleteTask(task)">Delete</button></div>
                    </div>
                    <div class="">
                        <form v-on:submit='addTask'>
                            <div>
                            <input type="text" class='form-control' v-model='tasks.name'>
                            </div>
                            <div>
                                <input type="submit" value='Criar Card' class='btn btn-primary btn-block'>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
  </div>
</div>

<script>
var andamento = new Vue({
  el: '#andamento',
  data: {
    tasks: [
      { name: 'Pegar meu passaporte dia 13/11', done: false },
      { name: 'Levar açaí', done: false },
      { name: 'Doar meu macbook', done: false },
    ]
  },
  methods: {
    addTask: function(e) {
      e.preventDefault();
      this.tasks.push({
        name: this.tasks.name,
        done: false
      });
    },
    deleteTask: function(task) {
      this.tasks.splice(this.tasks.indexOf(task), 1)
    }
  }
});

var concluido = new Vue({
  el: '#concluido',
  data: {
    tasks: [
      { name: 'Viver no país do bolsonaro', done: false },
    ]
  },
  methods: {
    addTask: function(e) {
      e.preventDefault();
      this.tasks.push({
        name: this.tasks.name,
        done: false
      });
    },
    deleteTask: function(task) {
      this.tasks.splice(this.tasks.indexOf(task), 1)
    }
  }
});

</script>
